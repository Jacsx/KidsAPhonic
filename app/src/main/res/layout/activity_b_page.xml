<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bgchildren">

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="125dp"
        android:layout_height="87dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/arrow" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="101dp"
        android:layout_height="96dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/home" />

    <ImageButton
        android:id="@+id/previousButton"
        android:layout_width="125dp"
        android:layout_height="87dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/leftarrow" />

    <ImageButton
        android:id="@+id/bButton"
        android:layout_width="178dp"
        android:layout_height="151dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bbutton" />

    <ImageButton
        android:id="@+id/bRecordButton"
        android:layout_width="107dp"
        android:layout_height="89dp"
        android:layout_above="@id/bButton"
        android:layout_centerVertical="true"
        android:layout_marginLeft="170dp"
        android:layout_marginBottom="19dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/recordbutton" />

    <ImageButton
        android:id="@+id/bStopRecord"
        android:layout_width="107dp"
        android:layout_height="89dp"
        android:layout_above="@id/bButton"
        android:layout_centerVertical="true"
        android:layout_marginLeft="310dp"
        android:layout_marginBottom="24dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/stopbutton" />

    <ImageButton
        android:id="@+id/bPlayRecord"
        android:layout_width="107dp"
        android:layout_height="89dp"
        android:layout_above="@id/bButton"
        android:layout_centerVertical="true"
        android:layout_marginLeft="450dp"
        android:layout_marginBottom="24dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/playrecordbutton" />


</RelativeLayout>